---
import { Leaf, Wheat, Laptop, Coffee, Salad, Croissant } from 'lucide-astro';

interface Props {
  title: string;
  slug: string;
  description?: string;
  heroImage?: string;
  rating?: number;
  location?: {
    name?: string;
    slug?: string;
  };
  hideLocation?: boolean;
  veganOptions?: number;
  glutenFree?: number;
  workability?: number;
  coffeeCraftsmanship?: number;
  healthFocus?: number;
  croissants?: number;
}

const { 
  title, 
  slug, 
  description, 
  heroImage, 
  rating, 
  location, 
  hideLocation = false,
  veganOptions,
  glutenFree,
  workability,
  coffeeCraftsmanship,
  healthFocus,
  croissants
} = Astro.props;

const averageRating = rating || 0;
const featuredImageUrl = heroImage || '';
const locationName = location?.name || '';
const locationSlug = location?.slug || '';
---

<a href={`/blog/${slug}`} class="review-card" data-location={locationSlug}>
  <div class="review-image">
    {featuredImageUrl ? (
      <img 
        src={featuredImageUrl} 
        alt={title}
        loading="lazy"
      />
    ) : (
      <div class="image-placeholder">
        <span>No Image</span>
      </div>
    )}
  </div>
  
  <div class="review-content">
    <div class="review-header">
      <h3 class="review-title">{title}</h3>
      {!hideLocation && locationName && (
        <span class="review-location">{locationName}</span>
      )}
    </div>
    
    {description && (
      <p class="review-description">{description}</p>
    )}
    
    <div class="ratings-container">
      {veganOptions && (
        <div class="rating-item" title="Vegan Options">
          <Leaf class="rating-icon" size={16} />
          <span class="rating-value">{veganOptions}/5</span>
        </div>
      )}
      {glutenFree && (
        <div class="rating-item" title="Gluten Free Options">
          <Wheat class="rating-icon" size={16} />
          <span class="rating-value">{glutenFree}/5</span>
        </div>
      )}
      {workability && (
        <div class="rating-item" title="Workability">
          <Laptop class="rating-icon" size={16} />
          <span class="rating-value">{workability}/5</span>
        </div>
      )}
      {coffeeCraftsmanship && (
        <div class="rating-item" title="Coffee Craftsmanship">
          <Coffee class="rating-icon" size={16} />
          <span class="rating-value">{coffeeCraftsmanship}/5</span>
        </div>
      )}
      {healthFocus && (
        <div class="rating-item" title="Health Focus">
          <Salad class="rating-icon" size={16} />
          <span class="rating-value">{healthFocus}/5</span>
        </div>
      )}
      {croissants && (
        <div class="rating-item" title="Croissants">
          <Croissant class="rating-icon" size={16} />
          <span class="rating-value">{croissants}/5</span>
        </div>
      )}
    </div>
  </div>
</a>

<style>
  .review-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: row;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .review-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .review-image {
    position: relative;
    width: 280px;
    min-width: 280px;
    overflow: hidden;
  }

  .review-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .review-card:hover .review-image img {
    transform: scale(1.05);
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: #e1e1e1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }


  .review-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .review-header {
    margin-bottom: 1rem;
  }

  .review-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #333;
    margin: 0 0 0.5rem 0;
    text-decoration: none;
  }

  .review-location {
    color: #666;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
  }

  .review-location:before {
    content: "üìç";
    margin-right: 0.3rem;
  }

  .review-description {
    color: #555;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-decoration: none;
  }

  .ratings-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: auto;
    pointer-events: none;
  }

  .rating-item {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    background: #f5f5f5;
    padding: 0.4rem 0.7rem;
    border-radius: 6px;
    font-size: 0.85rem;
    transition: background 0.2s ease;
    pointer-events: auto;
    position: relative;
  }

  .rating-item:hover {
    background: #e8e8e8;
  }

  .rating-icon {
    color: #666;
    flex-shrink: 0;
  }

  .rating-value {
    font-weight: 600;
    color: #333;
  }



  /* Responsive design */
  @media (max-width: 768px) {
    .review-card {
      flex-direction: column;
    }

    .review-image {
      width: 100%;
      height: 200px;
    }

    .review-content {
      padding: 1.2rem;
    }
  }
</style>
